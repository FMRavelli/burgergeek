<section class="page-section cta about-heading">
    <div class="container">
        <img class="img-fluid rounded about-heading-img mb-3 mb-lg-0" src="~/assets/img/contact.jpg" alt="..." />
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <div class="cta-inner bg-faded text-center rounded p-5">
                        <h2 class="section-heading mb-5">
                            <span class="section-heading-upper">Parabéns!</span>
                            <span class="section-heading-lower">Você encontrou um segredo!</span>
                        </h2>
                        <hr class="mb-4 mt-4" />
                        <div class="row">
                            <h2>Decifra-me ou te devoro :)</h2>
                            <br />
                            <h3>Você sabe a senha, é meu maior segredo</h3>
                            @using (Html.BeginForm("Segredo", "Admin", FormMethod.Post))
                            {
                                <label for="senha">Senha:</label>
                                <input type="password" name="senha" required />
                                <br />
                                <input class="mt-2 mb-2" type="submit" value="Login" />
                                <p>Tudo junto e cada primeira letra maiúscula</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>